{
	"compilerOptions": {
		"module": "commonjs",
		"preserveConstEnums": true,
		"allowUnreachableCode": true,
		"declaration": true,
		"outDir": "lib",
		"removeComments": false,
		"strict": true,
		"strictNullChecks": false,
		"target": "es2018",
		"experimentalDecorators": true,
		"sourceMap": true,
		"lib": [
			"es2018",
			"esnext.asynciterable"
		]
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"exclude": [
		"node_modules",
		"lib"
	]
}
