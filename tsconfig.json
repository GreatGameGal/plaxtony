{
  "compilerOptions": {
    "module": "commonjs",
    "preserveConstEnums": true,
    "allowUnreachableCode": true,
    "declaration": true,
    "outDir": "lib",
    "removeComments": false,
    "strict": true,
    "strictNullChecks": false,
    "target": "es6",
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}