void test_byte_byte()
{
    byte a;
    byte b;
    bool r;

    a = a + b;
    a = a - b;
    a = a * b;
    a = a / b;

    a = a & b;
    a = a | b;
    a = a ^ b;

    a = a >> b;
    a = a << b;

    a = ~b;
    a = !b;

    r = a > b;
    r = a >= b;
    r = a < b;
    r = a <= b;
    r = a == b;
}

